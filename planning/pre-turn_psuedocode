
##### START #####

deal

# These are used throughout decision tree, can check their output up front
gambler_has_blackjack
dealear_has_blackjack

# Go through decision tree
if dealer_showing_ace_or_face_card:
    
    if dealer_showing_ace:

        if gambler_has_blackjack:

            if gambler_wants_even_money:
                gambler_wins_hand_1_to_1  
                # TURN OVER
            else:
                if dealear_has_blackjack:
                    push
                else:
                    gambler_wins_hand_3_to_2  
                    # TURN OVER
        else:
            if gambler_wants_insurance:
                
                place_insurance_wager
                
                if dealear_has_blackjack:
                    gambler_wins_insurance_wager_2_to_1
                    gambler_loses_hand  
                    # TURN OVER
                else:
                    gambler_loses_insurance_wager
                    play_hand

            else:
                if dealear_has_blackjack:
                    gambler_loses_hand
                    # TURN OVER
                else:
                    play_hand

    else:
        if dealear_has_blackjack:

            if gambler_has_blackjack:
                push  # TURN OVER
            else:
                gambler_loses_hand
                # TURN OVER
        else:
            play_hand

else:
    if gambler_has_blackjack:
        gambler_wins_hand_3_to_2
        # TURN OVER
    else:
        play_hand
